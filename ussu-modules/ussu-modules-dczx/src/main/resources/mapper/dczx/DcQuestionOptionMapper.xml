<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ussu.modules.dczx.mapper.DcQuestionOptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cc.ussu.modules.dczx.entity.DcQuestionOption">
        <id column="option_id" property="optionId" />
        <result column="paper_id" property="paperId" />
        <result column="question_id" property="questionId" />
        <result column="option_content" property="optionContent" />
        <result column="option_type" property="optionType" />
        <result column="istrue" property="istrue" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="interface_log_id" property="interfaceLogId" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        paper_id, question_id, option_id, option_content, option_type, istrue, create_time, create_by, interface_log_id
    </sql>

    <select id="selectListByQuestionId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from dc_question_option
        where question_id = #{questionId}
    </select>

    <select id="selectVOListByQuestionId" resultType="cc.ussu.modules.dczx.entity.vo.DcQuestionOptionVO">
        select
            option_id as optionId,
            option_content as optionContent,
            istrue,
            create_time as createTime
        from dc_question_option
        where question_id = #{questionId}
    </select>

</mapper>
