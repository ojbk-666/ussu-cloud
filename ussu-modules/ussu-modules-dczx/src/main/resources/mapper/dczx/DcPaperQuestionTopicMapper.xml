<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ussu.modules.dczx.mapper.DcPaperQuestionTopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cc.ussu.modules.dczx.entity.DcPaperQuestionTopic">
        <id column="full_topic_type_cd" property="fullTopicTypeCd" />
        <result column="topic_id" property="topicId" />
        <result column="topic_id" property="paperId" />
        <result column="topic_type_cd" property="topicTypeCd" />
        <result column="question_type_nm" property="questionTypeNm" />
        <result column="topic_type_id" property="topicTypeId" />
        <result column="interface_log_id" property="interfaceLogId" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        paper_id, topic_id, topic_type_cd, full_topic_type_cd, question_type_nm, topic_type_id, interface_log_id
    </sql>

    <!--通过topic_type_ids查询-->
    <select id="findByTopicTypeIds" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dc_paper_question_topic
        where 1=1
        <if test="ids != null">
            and topic_type_id in
            <foreach item="item" collection="ids" separator="," open="(" close=")" index="">
                #{item}
            </foreach>
        </if>
    </select>

    <select id="selectByFullTopicTypeCd" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from dc_paper_question_topic
        where full_topic_type_cd = #{fullTopicTypeCd}
    </select>

</mapper>
