<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.ussu.modules.dczx.mapper.DcTaskMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cc.ussu.modules.dczx.entity.DcTask">
        <id column="id" property="id" />
        <result column="course_id" property="courseId" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="status" property="status" />
        <result column="progress" property="progress" />
        <result column="dc_username" property="dcUsername" />
        <result column="trusteeship_id" property="trusteeshipId" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="reason" property="reason" />
        <result column="remark" property="remark" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_id, start_time, end_time, `status`, progress, dc_username, trusteeship_id, create_by, create_time,reason,remark,del_flag
    </sql>

    <select id="findPage" resultType="cc.ussu.modules.dczx.entity.vo.DcTaskVO">
        select
            a.id,a.course_id as courseId,
            a.start_time as startTime,
            a.end_time as endTime,
            a.status,
            a.task_type as taskType,
            a.progress,
            a.dc_username as dcUsername,
            a.trusteeship_id as trusteeshipId,
            a.create_by as createName,
            a.create_time as createTime,
            a.reason,
            a.remark,
            b.course_name as courseName
        from dc_task a join dc_course b on a.course_id = b.course_id
        where a.del_flag = 0
        <if test="courseId != null and courseId != ''">
            and a.course_id = #{courseId}
        </if>
        <if test="status != null and status != ''">
            and a.status = #{status}
        </if>
        <if test="taskType != null and taskType != ''">
            and a.task_type = #{taskType}
        </if>
        <if test="dcUsername != null and dcUsername != ''">
            and a.dc_username like concat('%',#{dcUsername},'%')
        </if>
        <if test="trusteeshipId != null and trusteeshipId != ''">
            and a.trusteeship_id = #{trusteeshipId}
        </if>
        <if test="createBy != null and createBy != ''">
            and a.create_by = #{createBy}
        </if>
    </select>

</mapper>
