<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ussu.modules.dczx.mapper.DcQuestionOptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.ussu.modules.dczx.entity.DcQuestionOption">
        <id column="id" property="id" />
        <result column="paper_id_long" property="paperIdLong" />
        <result column="paper_id_str" property="paperIdStr" />
        <result column="question_id_long" property="questionIdLong" />
        <result column="question_id_str" property="questionIdStr" />
        <result column="option_id" property="optionId" />
        <result column="option_content" property="optionContent" />
        <result column="option_type" property="optionType" />
        <result column="istrue" property="istrue" />
        <result column="selected" property="selected" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="interface_log_id" property="interfaceLogId" />
        <result column="del_flag" property="delFlag" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, paper_id_long,paper_id_str,question_id_long, question_id_str, option_id, option_content, option_type, istrue,selected, create_time, create_by, interface_log_id, del_flag
    </sql>
    <!--根据question_id_long查询-->
    <select id="findByQuestionIdLong" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from dc_question_option
        where del_flag =0 and question_id_long = #{parameter}
    </select>


</mapper>
