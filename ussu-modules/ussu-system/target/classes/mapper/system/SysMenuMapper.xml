<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ussu.modules.system.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.ussu.modules.system.entity.SysMenu">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="name" property="name" />
        <result column="sort" property="sort" />
        <result column="type" property="type" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="icon" property="icon" />
        <result column="show_flag" property="showFlag" />
        <result column="cache_flag" property="cacheFlag" />
        <result column="iframe_flag" property="iframeFlag" />
        <result column="perm" property="perm" />
        <result column="sys_type" property="sysType" />
        <result column="remarks" property="remarks" />
        <result column="status" property="status"/>
        <result column="del_flag" property="delFlag" />
        <result column="version" property="version" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, name, sort, path, component, type, icon, show_flag,cache_flag, iframe_flag, perm, sys_type, remarks,status, del_flag, version
    </sql>
    <sql id="Base_Column_List_A">
        a.id, a.parent_id, a.name, a.sort, a.path, a.component, a.type, a.icon, a.show_flag,a.cache_flag, a.iframe_flag, a.perm, a.sys_type, a.remarks,a.status, a.del_flag, a.version
    </sql>

    <!--通过用户id查询用户菜单列表-->
    <select id="findMenuListByUserId"
            resultMap="BaseResultMap"
            parameterType="java.lang.String">
        select distinct
        <include refid="Base_Column_List_A"/>
        from sys_menu a
        <if test="userId != null and userId!=''">
            , sys_role_menu rm
            , sys_user_role ur
        </if>
        <where>
            a.del_flag = 0
            -- 超级管理员获取所有菜单
            <if test="userId!=null and userId!=''">
                and a.id = rm.menu_id
                and rm.role_id = ur.role_id
                and ur.user_id = #{userId}
            </if>
            -- 仅筛选菜单
            <if test="onlyMenu">
                and a.type != 30 and a.status = 1
            </if>
        </where>
        order by a.sort asc
    </select>
    <!--根据角色获取菜单-->
    <select id="findByRoleId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List_A"/>
        FROM sys_role_menu b LEFT JOIN sys_menu a on b.menu_id = a.id
        WHERE a.del_flag = 0 AND b.role_id = #{roleId}
    </select>

</mapper>
